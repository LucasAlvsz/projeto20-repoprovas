{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": "./src",
	"paths": {
		"@/*": [
			"./*"
		],
		"@schemas/*": [
			"./schemas/*"
		],
		"@db/*": [
			"./db/*"
		],
		"@routes/*": [
			"./routes/*"
		],
		"@middlewares/*": [
			"./middlewares/*"
		],
		"@controllers/*": [
			"./controllers/*"
		],
		"@services/*": [
			"./services/*"
		],
		"@utils/*": [
			"./utils/*"
		]
	},
  },
  "ts-node": {
    "esm": true,
  },

}